
<h2><%= @user.name %></h2>
<div class="container col-md-2 col-sm-4 col-xs-6">
  <div class="row">
<p><%= @user.followers.count %>フォロワー</p>
<% @user.followers.each do |follower| %>
  <%= profile_img(follower) %>
  <%= link_to follower.name, user_path(follower) %>
  </div>
<% end %>
</div>

<div class="container col-md-2 col-sm-4 col-xs-6">
  <div class="row">
<p><%= @user.followed_users.count %>フォロー</p>
<% @user.followed_users.each do |followed| %>
  <%= profile_img(followed) %>
  <%= link_to followed.name, user_path(followed) %>
  </div>
<% end %>
</div>
