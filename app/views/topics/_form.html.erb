<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <div class="row">

<%= form_for(@topic) do |f| %>
<%= f.error_messages! %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit "投稿", class: 'btn btn-primary btn-block' %>
<% end %>
</div>
</div>
</div>
