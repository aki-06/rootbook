<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

<%= form_for(@topic, url: choose_new_or_edit) do |f| %>
<% if @topic.errors.any? %>
  <div id="error_explanation">
    <h2><%= @topic.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit "確認", class: 'btn btn-default' %>
<% end %>
</div>
</div>
