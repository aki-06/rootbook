%p#notice= notice
.child.row
  .wrapper.col-md-6.col-md-offset-3.col-sm-10.col-sm-offset-1
    .row
      .topic-text
        %p.profile_img= profile_img(@topic.user)
        %p.left
          %strong= @topic.user.name
        %p.left= @topic.title
        %p.left= @topic.content
        - if @topic.image?
          %p.left= image_tag @topic.image.url
        %p.right
          %strong 作成時間:
          = @topic.created_at.strftime("%y/%m/%d %p %l:%M")
      #comments_area
        = render partial: 'comments/index', locals: { comments: @comments, topic: @topic }
      = render partial: 'comments/form', locals: { comment: @comment, topic: @topic }
      .btn
        = link_to '戻る', topics_path, class: 'btn btn-default'
