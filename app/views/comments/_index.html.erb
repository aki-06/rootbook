<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li>
        <p class="left"><%= comment.user.name %></p>
        <p class="left"><%= comment.content %></p>
        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to '編集', edit_topic_comment_path(comment.topic_id, comment), class: 'btn btn-success btn-sm' if comment.user_id == current_user.id %>
            <%= link_to '削除', topic_comment_path(comment.topic_id, comment.id), method: :delete, remote: true, class: 'btn btn-danger btn-sm' if comment.user_id == current_user.id %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
