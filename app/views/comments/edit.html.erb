<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
<h1>コメント編集</h1>
  <%= form_for(@comment, url: topic_comment_path(@comment.topic, @comment)) do |f| %>
  <div class="row">
    <%= f.text_area :content, class: "form-control", placeholder: 'コメントを入力' %>
  </div>
  <div class="row">
    <%= f.submit '送信', class: 'btn btn-success' %>
  </div>
<% end %>
</div>
</div>
