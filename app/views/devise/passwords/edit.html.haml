.container
  .wrapper.col-md-4.col-md-offset-4.col-sm-10
    %h2 パスワードを変更する
    = form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :put }) do |f|
      = error_messages!
      = f.hidden_field :reset_password_token
      .field
        = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "パスワード"
      .field
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）"
      .actions
        = f.submit "パスワードを変更する", class: "btn btn-primary btn-block"
    = render "devise/shared/links"
